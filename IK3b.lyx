\begin_layout Subsection
Schrödinger-, Heisenberg- und Wechselwirkungsbild in der Quantenmechanik
\end_layout

\begin_layout Standard
Nur Matrixelemente sind physikalisch relevant:
\begin_inset Formula 
\begin{align*}
O_{\phi'\phi} & =\BraKet{\phi'|\hat{O}|\phi}
\end{align*}

\end_inset

Diese hängen im Allgemeinen von der Zeit ab:
\begin_inset Formula 
\begin{align*}
\frac{\dd}{\dd t}O_{\phi'\phi} & =\left(\frac{\dd}{\dd t}\BRA{\phi'}\right)\hat{O}\KET{\phi}+\BraKet{\phi'|\left(\frac{\dd}{\dd t}\hat{O}\right)|\phi}+\BRA{\phi'}\hat{O}\left(\frac{\dd}{\dd t}\KET{\phi}\right)
\end{align*}

\end_inset

Im Schrödingerbild sind die Operatoren nicht zeitabhängig:
\begin_inset Formula 
\begin{align*}
\frac{\dd}{\dd t}\hat{O}_{S} & =0
\end{align*}

\end_inset

Die Zeitabhängigkeit der Zustände wird durch den Hamilton-Operator beschrieben:
\begin_inset Formula 
\begin{align*}
\ii\frac{\dd}{\dd t}\KET{\phi_{S}\left(t\right)} & =:\hat{H}\KET{\phi_{S}\left(t\right)} & -\ii\frac{\dd}{\dd t}\BRA{\phi_{S}'\left(t\right)} & =:\BRA{\phi_{S}'\left(t\right)}\hat{H}
\end{align*}

\end_inset

Es folgt:
\begin_inset Formula 
\begin{align*}
\frac{\dd}{\dd t}O_{\phi'\phi} & =\ii\BraKet{\phi'|\hat{H}\hat{O}|\phi}-\ii\BraKet{\phi'|\hat{O}\hat{H}|\phi}=\ii\BraKet{\phi_{S}'|\left[\hat{H},\hat{O}\right]|\phi_{S}}
\end{align*}

\end_inset

Im Heisenbergbild sind die Zustände zeitunabhängig:
\begin_inset Formula 
\begin{align*}
\frac{\dd}{\dd t}\KET{\phi} & =\frac{\dd}{\dd t}\BRA{\phi'}=0 & \frac{\dd}{\dd t}\hat{O}_{H} & =\ii\left[\hat{H},\hat{O}_{H}\right]
\end{align*}

\end_inset

Im Wechselwirkungsbild zerlegt man 
\begin_inset Formula $\hat{H}=\hat{H}_{0}+\hat{H}_{I}$
\end_inset

.
 Dabei sei 
\begin_inset Formula $\hat{H}_{0}$
\end_inset

 nicht explizit zeitabhängig.
\begin_inset Formula 
\begin{align*}
-\ii\frac{\dd}{\dd t}\BRA{\phi_{I}'} & =\BRA{\phi_{I}'}\hat{H}_{I} & -\ii\frac{\dd}{\dd t}\hat{O}_{I} & =\left[\hat{H}_{0},\hat{O}_{I}\right]\\
\ii\frac{\dd}{\dd t}\KET{\phi_{I}} & =-\hat{H}_{I}\KET{\phi_{I}}
\end{align*}

\end_inset

Mache den Ansatz:
\begin_inset Formula 
\begin{align}
\fbox{\ensuremath{{\displaystyle \hat{O}_{I}\left(t\right)=e^{\ii\hat{H}_{0}\left(t-t_{0}\right)}\hat{O}_{S}e^{-\ii\hat{H}_{0}\left(t-t_{0}\right)}}}}
\end{align}

\end_inset


\begin_inset Formula 
\begin{align*}
-\ii\frac{\dd}{\dd t}\hat{O}_{I}\left(t\right) & =e^{\ii\hat{H}_{0}\left(t-t_{0}\right)}\left(\hat{H}_{0}\hat{O}_{S}-\hat{O}_{S}\hat{H}_{0}\right)e^{-\ii\hat{H}_{0}\left(t-t_{0}\right)}=\left[\hat{H}_{0},\hat{O}_{I}\right]
\end{align*}

\end_inset

Für den Zusammenhang zum Heisenbergbild machen wir folgenden Ansatz:
\begin_inset Formula 
\begin{align}
\fbox{\ensuremath{{\displaystyle \hat{O}_{H}\left(t\right)=\left(\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau\right)\dd\tau\right)\right)^{\dagger}\hat{O}_{I}\left(t\right)\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau'\right)\dd\tau'\right)}}}
\end{align}

\end_inset


\begin_inset Formula 
\begin{align*}
-\ii\frac{\dd}{\dd t}\hat{O}_{H} & =-\ii\left(-\ii H_{I}\left(t\right)\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau\right)\dd\tau\right)\right)^{\dagger}\hat{O}_{I}\left(t\right)\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau'\right)\dd\tau'\right)+\\
 & \qquad+\left(\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau\right)\dd\tau\right)\right)^{\dagger}\left[\hat{H}_{0},\hat{O}_{I}\left(t\right)\right]\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau'\right)\dd\tau'\right)+\\
 & \qquad+\left(\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau\right)\dd\tau\right)\right)^{\dagger}\hat{O}_{I}\left(t\right)\left(-H_{I}\left(t\right)\right)\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau'\right)\dd\tau'\right)=\\
 & =\left(\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau\right)\dd\tau\right)\right)^{\dagger}\left[\hat{H},\hat{O}_{I}\left(t\right)\right]\TT\exp\left(-\ii\int_{-\infty}^{t}\hat{H}_{I}\left(\tau'\right)\dd\tau'\right)
\end{align*}

\end_inset


\end_layout

